#include <stdio.h>
int fatorial(int fatorizar);

int main(void) {

  int fatorizar;

  printf("Insira um nÃºmero: ");
  scanf("%d",&fatorizar);

  if(fatorizar > 0){
    printf("1 = %d",fatorial(fatorizar)); 
  }


}

int fatorial(int fatorizar){
  int multipli=1, n=fatorizar;

    for(int i=0;i < fatorizar-1;i++){
      printf("%d x ",n);

      multipli = multipli*n;

      n--;
  }

  return multipli;
}
